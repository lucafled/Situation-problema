def menu():
    while True:
        dicho = input("Elige una opción: ")
        if dicho == "1":
            asking()
        elif dicho == "2":
            random_match()
        elif dicho == "3":
            leaderboard()
        elif dicho == "4":
            mennuu()
        elif dicho == "5":
            points()
        elif dicho == "6":
            print("¡Hasta luego! Vuelve pronto.")
            break


