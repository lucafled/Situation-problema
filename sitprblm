mennuu()

def menu():
    while True:
        dicho = input("Elige una opción: ")
        if dicho == "1":
            tickets()
        elif dicho == "2":
            datos_concierto()
        elif dicho == "3":
            lugares()
        elif dicho == "4":
            datos_ventas()
        elif dicho == "5":
            reportes_ventas()
        elif dicho == "6":
            print("¡Hasta luego! Vuelve pronto.")
            break


def tickets():
    numeroboletos = int(input("ingresa cuantos boletos quieres: "))

    print(numeroboletos)

def datos_concierto():
    print(2)

def lugares():
    print(3)

def datos_ventas():
    print(4)

def reportes_ventas():
    print(5)

menu()


    


